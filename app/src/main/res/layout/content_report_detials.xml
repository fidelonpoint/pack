<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gdg.ng.pack.ReportDetials"
    tools:showIn="@layout/activity_report_detials">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/layer1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background">
    <TextView
        android:id="@+id/waste_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Waste Information "
        android:textColor="@color/colorPrimary"
        android:textSize="19sp"
        />
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/waste_size"
        android:layout_marginTop="3dp"
        android:background="#B6B6B6" />
    <TextView
        android:id="@+id/waste_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_marginTop="5dp"
        android:text="Small size Organic waste"
        android:textSize="14sp"
        />


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/layer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layer1"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_background">
        <ImageView
            android:id="@+id/map_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_location_on_black_24dp"

            />
        <TextView

            android:id="@+id/address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/map_location"
            android:text="#13 ikpa road, uyo"
            android:textSize="14sp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/map_location"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#B6B6B6" />

        <ImageView
            android:id="@+id/seen"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_below="@+id/divider3"
            android:layout_marginLeft="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_remove_red_eye_black_48dp"

            />

        <TextView
            android:id="@+id/seen_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider3"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/seen"
            android:text="2,900"
            android:textSize="14sp"
            />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/layer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layer2"
        android:layout_marginTop="10dp"
        android:background="@drawable/card_background">
        <TextView
            android:id="@+id/additional_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Comment"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/additional_information"
            android:layout_marginTop="3dp"
            android:background="#B6B6B6" />
        <TextView
            android:id="@+id/title_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="7dp"
            android:text="@string/comment"
            android:textSize="14sp"
            />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
